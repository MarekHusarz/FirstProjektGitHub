<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>logIn.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ServletLogowanie</servlet-name>
        <servlet-class>classes.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogowanie</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletWylogowanie</servlet-name>
        <servlet-class>classes.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletWylogowanie</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletRejestracja</servlet-name>
        <servlet-class>classes.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRejestracja</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

</web-app>


